<%- include('header') %>
<% blogs.forEach(blog => { %>
  <div class="card text-center" style="width:60% ;position: relative;left:280px;top:50px">
      <div class="card-header">
        <%= blog.category %>
      </div>
      <div class="card-body">
        <h5 class="card-title">blog.title</h5>
        <p class="card-text">blog.subTitle</p>
      </div>
      <img src="<%= blog.blogImages[0] %>" class="card-img-top" alt="Blog Image">
      
      <div class="card-body">
        <a href="/viewBlog/<%= blog._id %>" class="btn btn-primary">Read</a>

      </div>
  
      <div class="card-footer text-body-secondary">
        2 days ago
      </div>
    </div>
    <% })%> 


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</body>
</html>