<%- include('header') %>
<form action="/signup" method="POST">
  <div style="position: relative;width:40%;top:20vh;left:30vw;border:30px;">
    <h1 class="mb-4" style="position: relative;left:220px">Sign Up</h1>
    <div class="mb-3 row">
        <label  class="col-sm-2 col-form-label" >Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name">
        </div>
    <div class="mb-3 mt-3 row">
        <label  class="col-sm-2 col-form-label" >Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" name="username" >
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label" >Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" name="password" >
        </div>
      </div>
      <button type="submit" class="btn btn-dark" style="position: relative;left:20vw;width:15vh;">Sign Up</button>
</div>
</div>
</form>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>